 </trial>

 <trial end>
 	/validresponse = (anyresponse)
 	/stimulustimes = [1=endpicture]
 	/recorddata = false
 </trial>

 <block instructionblk>
 	/screencolor =/color = (255, 255, 255)
 	/trials = [1 = instruction;2=end]
 </block>

 <expt >
 	/ blocks = [1=instructionblk]
