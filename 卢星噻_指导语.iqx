<picture instructionpicture>
	/ items = ("instruction.png")
	/size = (100%,100%)
	/halign =  center
	/valign =  center
</picture>

 <picture endpicture>
 	/items = ("end.png")
 	/size = (100%,100%)
 </picture>

 <trial instruction>
 	/validresponse = (anyresponse)
 	/stimulustimes = [1=instructionpicture]
