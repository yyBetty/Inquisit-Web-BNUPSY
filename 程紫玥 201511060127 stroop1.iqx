<text begintxt>
/items=begin
/fontstyle = ("楷体", 4pct)
/txbgcolor = (0,0,0)
/txcolor = (255,0,255)
/size = (1300,800)
/hjustify = center
</text>

<text anykeytxt>
/items = any
/vposition = 70 pct
/fontstyle = ("楷体", 24pt)
/txcolor = (255,0,0)
/txbgcolor = (transparent)
</text>
<text redwordstxt>
	/items = redwords
	/ fontstyle = ("Arial",60ptc)
	/txbgcolor = (0,0,0)
	/txcolor = (0,255,0)
</text>

<text yellowwordstxt>
	/items = yellowwords
	/ fontstyle = ("Arial",60ptc)
	/txbgcolor = (0,0,0)
	/txcolor = (255,0,0)
</text>
<text bluewordstxt>
	/items = bluewords
	/ fontstyle = ("Arial",60ptc)
	/txbgcolor = (0,0,0)
	/txcolor = (0,255,255)
</text>
<text greenwordstxt>
	/items = greenwords
	/ fontstyle = ("Arial",60ptc)
	/txbgcolor = (0,0,0)
	/txcolor = (0,0,255)
</text>
**************************************************************************************************************************************************************************

<trial begin>
/validresponse = (anyresponse)
/stimulusframes = [1=begintxt,anykeytxt]
/recorddata = false
</trial>
<trial redwords>
	/pretrialpause = 500
	/validresponse = ("F","G","H","J")
	/correctresponse = ("F")
	/stimulusframes = [1 = redwordstxt]
</trial>
<trial yellowwords>
	/pretrialpause = 500
	/validresponse = ("F","G","H","J")
	/correctresponse = ("G")
	/stimulusframes = [1 = yellowwordstxt]
</trial>
<trial greenwords>
	/pretrialpause = 500
	/validresponse = ("F","G","H","J")
	/correctresponse = ("H")
	/stimulusframes = [1 = greenwordstxt]
</trial>
<trial bluewords>
	/pretrialpause = 500
	/validresponse = ("F","G","H","J")
	/correctresponse = ("J")
	/stimulusframes = [1 = bluewordstxt]
</trial>


**************************************************************************************************************************************************************************

<block beginblk>
/screencolor = (0,0,0)
/trials = [1 = begin]
</block>


<block redbluegreenyellowblk>
/screencolor = (0,0,0)
/blockfeedback = (meanlatency,correct)
/trials = [1-16 = noreplace(redwords, bluewords,greenwords,yellowwords)]
</block>

<expt>
/ blocks = [1 = beginblk; 2 =redbluegreenyellowblk ]
</expt>