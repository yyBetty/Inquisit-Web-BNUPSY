定义刺激
*******************************************************************************************************************************************************************************************
<text instructiontxt>
 / items = instructiontxt
 / size = (2600,1600)
 / select = sequence(1,2,3)
 / fontstyle = ("宋体",30pt)
 / txcolor = (255,215,0)
 / txbgcolor = (0,0,0)
</text>

<text spacebar>
 / items = ("按空格键继续")
 / vposition = 90pct
 / fontstyle = ("黑体",25px)
 / txcolor = (255,0,0)
</text>
*******************************************************************************************************************************************************************************************
定义试次
*******************************************************************************************************************************************************************************************
<trial instruction>
 / validresponse = (" ")
 / stimulusframes = [1=instructiontxt,spacebar]
</trial>
*******************************************************************************************************************************************************************************************
定义区组
*******************************************************************************************************************************************************************************************
<block instruction>
 / trials = [1,2,3=instruction]
</block>
*******************************************************************************************************************************************************************************************
定义实验
*******************************************************************************************************************************************************************************************
<expt>
 / blocks = [1=instruction]
</expt>
