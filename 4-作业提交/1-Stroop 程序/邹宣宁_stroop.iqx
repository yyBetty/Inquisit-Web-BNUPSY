<text instructiontxt>
/items=instruction
/fontstyle = ("宋体", 4pct)
/txbgcolor = (0,0,0)
/txcolor = (255,255,255)
/size = (1366,768)
/hjustify = center
</text>

<text anykeytxt>
/items = any
/vposition = 70 pct
/fontstyle = ("宋体", 24pt)
/txcolor = (255,0,0)
/txbgcolor = (transparent)
</text>

<text redwordstxt>
/items = redwords
/fontstyle = ("Arial",60ptc)
/txbgcolor = (0,0,0)
/txcolor = red
</text>

<text bluewordstxt>
/items = bluewords
/fontstyle = ("Arial",60ptc)
/txbgcolor = (0,0,0)
/txcolor = blue
</text>

<text greenwordstxt>
/items = greenwords
/fontstyle = ("Arial",60ptc)
/txbgcolor = (0,0,0)
/txcolor = green
</text>

<text orangewordstxt>
/items = orangewords
/fontstyle = ("Arial",60ptc)
/txbgcolor = (0,0,0)
/txcolor = orange
</text>

<trial instruction>
/validresponse = (anyresponse)
/stimulusframes = [1=instructiontxt,anykeytxt]
/recorddata = false
</trial>

<trial redwordstrial>
/pretrialpause = 500
/validresponse = ("D","F","J","K")
/correctresponse = ("D")
/stimulusframes = [1 = redwordstxt]
</trial>

<trial bluewordstrial>
/pretrialpause = 500
/validresponse = ("D","F","J","K")
/correctresponse = ("F")
/stimulusframes = [1 = bluewordstxt]
</trial>

<trial greenwordstrial>
/pretrialpause = 500
/validresponse = ("D","F","J","K")
/correctresponse = ("J")
/stimulusframes = [1 = greenwordstxt]
</trial>

<trial orangewordstrial>
/pretrialpause = 500
/validresponse = ("D","F","J","K")
/correctresponse = ("K")
/stimulusframes = [1 = orangewordstxt]
</trial>

<block instructionblk>
/screencolor = (0,0,0)
/trials = [1 = instruction]
</block>


<block redbluegreenorangeblk>
/screencolor = (0,0,0)
/blockfeedback = (meanlatency,correct)
/trials = [1-16 = noreplace(redwordstrial, bluewordstrial,greenwordstrial,orangewordstrial)]
</block>

<expt>
/ blocks = [1 = instructionblk; 2 =redbluegreenorangeblk ]
</expt>